<div class="container-fluid">
<div class="parallax1">
<div class="row">
        <div class="jumbotron">
          <h1 id=h1>ATX</h1>
          <h1 id='h2'>NEWS</h1>
          <h3>Saved News Stories</h3>
          <div id="btnlinks">

          </div>
            <a href="/"><button type="button" class="btn btn-info">Main Page</button></a>


        </div>
  </div>
</div>

  <div class="parallax2">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">

      <!-- Remove Article Confirmation Modal  -->
    <div id="removeModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <span class="close">&times;</span>
        <h2>Are you sure you want to remove this article?</h2>
      </div>
      <h3>
        <button class='btn btn-default' id='delete'>
          <em class='glyphicon glyphicon-thumbs-up'></em>
        </button>
        <button class='btn btn-default'>
          <em class='glyphicon glyphicon-thumbs-down '></em>
        </button>
      </h3>
    <div class="modal-footer">
      <button type="button" class="close">Cancel</button>
    </div>
  </div>
</div>

<!-- Add Note Modal  -->
    <div id="addNote" class="modal">
    <div class="modal-content">
      <div class="modal-header2">
      </div>
        <div class="modal-body">
          <div id="notetitleSaved"></div>
          <div id="notebodySaved"></div>
          </div>
        <div id="notes"></div>
        <div class="modal-footer">
      <button type="button" class="close">Close</button>
    </div>
  </div>
</div>

      {{#each articles}}
        {{#if saved}}
        <div class="panel panel-default panel-table" data-id="{{this._id}}">
          <div class="panel-heading">
            <h3 class='panel-title text-center'>{{this.title}}</h3>
          </div>
          <div class="panel-body">
            <table class="table table-striped table-bordered table-list">
                <thead>
                    <tr>
                      <th>
                        <span class='glyphicon glyphicon-eye-open'></span>
                        Quick Summary
                        </th>
                      <th>
                        <span class='glyphicon glyphicon-link'>
                        </span>
                        Full Article Link</th>
                        <th>
                          <em class='glyphicon glyphicon-wrench'></em>
                        </th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr class='tdata'>
                      <td>{{this.body}}</td>
                      <td>
                        <a href="{{this.link}}" target="_blank">{{this.link}}</a>
                        </td>
                        <td align='center'>

                            <button type="button" class="btn btn-warning"><em class='glyphicon glyphicon-comment'></em> Notes</button>


                            <button type="button" class="btn btn-danger delete"><em class='glyphicon glyphicon-remove-circle'></em> Remove</button>

                        </td>
                    </tr>
                  </tbody>
              </table>
          </div>
        </div>


        {{/if}}
        {{else}}
        <div id="missing">
          <h1>Sorry, no articles have been saved!</h1>
        </div>
        {{/each}}
      </div>
    </div>
    </div>



  <div class="row">
    <div class="col-xs-12">
      <footer>
        <h3>ATX</h3>
          <h2>NEWS</h2>
          <p>Scraped from
            <a href="https://kxan.com/" target="_blank">KXAN.com</a>
          </p>
      </footer>
    </div>
  </div>
  </div>
