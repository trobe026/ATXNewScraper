<!-- Header -->
  <div class="container-fluid">
    <div class="parallax1">
      <div class="row">
        <div class="jumbotron">
          <h1 id=h1>ATX</h1>
          <h1 id='h2'>NEWS</h1>
          <p>Local News and Updates from KXAN</p>
          <div id='btnlinks'>
            <a href="/scrape"><button type="button" class="btn btn-danger pull-right">Scrape News!</button></a>
            <a href="/s"><button type="button" class="btn btn-info pull-left">Saved News Stories</button></a>
          </div>
        </div>
      </div>
    </div>
<!-- Main Article Section -->
    <div class="parallax2">
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
      {{#if articles}}
        {{#each articles}}
        <div class="panel panel-default panel-table" data-id="{{this._id}}">
          <div class="panel-heading panel-title">
            <h3 class=' text-center'>{{this.title}}</h3>
            <img src="{{this.img}}" alt="headline image">
          </div>
          <div class="panel-body">
            <table class="table table-striped table-bordered table-list">
                <thead>
                    <tr>
                      <th>
                        <em class='glyphicon glyphicon-cloud-download'></em>
                      </th>
                      <th>
                        <span class='glyphicon glyphicon-eye-open'></span>
                        Quick Summary
                        </th>
                      <th>
                        <span class='glyphicon glyphicon-link'>
                        </span>
                        Full Article Link</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr class='tdata'>
                      <td align='center'>
                          <button type="button" class="btn btn-success">Save</button>
                      </td>
                      <td>{{this.body}}</td>
                      <td>
                        <a href="{{this.link}}" target="_blank">{{this.link}}</a>
                        </td>
                    </tr>
                  </tbody>
              </table>
          </div>
        </div>
        {{/each}}
        {{else}}
        <div id="missing">
          <h1>Uh oh, looks like you don't have any news. Click the Scrape button!</h1>
        </div>
        {{/if}}
      </div>
    </div>
    </div>
<!-- Footer -->
  <div class="row">
    <div class="col-xs-12">
      <footer>
        <h3>ATX</h3>
          <h2>NEWS</h2>
          <p>Scraped from
            <a href="https://kxan.com/" target="_blank">KXAN.com</a>
          </p>
      </footer>
    </div>
  </div>

  </div>
